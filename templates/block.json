{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "klx/{{blockName}}",
    "version": "1.0.0",
    "title": "{{title}}",
    "category": "widgets",
    "icon": "smiley",
    "description": "{{description}}",
    "supports": {
        "html": false,
        "anchor": true,
        "spacing": {
            "margin": true,
            "padding": true
        },
        "color": {
            "text": true,
            "background": true,
            "link": true
        }
    },
    "textdomain": "{{blockName}}",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./build/index.css",
    "style": "file:./build/style-index.css"
} 